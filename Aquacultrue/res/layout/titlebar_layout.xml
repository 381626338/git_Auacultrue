<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titlebar_layout"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="@color/titlebar_color" >

        <ImageButton
            android:id="@+id/left_titlebar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/titlebar_back"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/center_titlebar_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/second_right_titlebar_layout"
            android:layout_toRightOf="@+id/left_titlebar_layout"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/center_titlebar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/thrid_right_titlebar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/second_right_titlebar_layout"
            android:visibility="gone" />
        
        <ImageButton
            android:id="@+id/second_right_titlebar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_titlebar_layout"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/right_titlebar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>